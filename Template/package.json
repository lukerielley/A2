{
    // Define the name of our NPM package app
    "name": "luke-a2-template",
    
    "version": "1.0.0",
    
    
    "scripts": {
        // When we hit 'npm start', this is the command that will run
        "start": "concurrent \"npm run tsc:w\" \"npm run lite\" ",
        "tsc": "tsc",
        "tsc:w": "tsc -w",
        "lite": "lite-server",
        "typings": "typings",
        "postinstall": "typings install"
    },
    
    "license": "ISC",
    
    // These are the dependancies of our app.
    "dependencies": {
        
        // we are explicit with the exact version of Angular 2 that we want
        "angular2": "2.0.0-beta.7",
        "systemjs": "0.19.22",
        "es6-promise": "^3.0.2",
        "es6-shim": "^0.33.3",
        "reflect-metadata": "0.1.2",
        "rxjs": "5.0.0-beta.2",
        "zone.js": "0.5.15"
    },
    
    
    "devDependencies": {
        "concurrently": "^2.0.0",
        "lite-server": "^2.1.0",
        "typescript": "^1.7.5",
        "typings": "^0.6.8"
    }
}